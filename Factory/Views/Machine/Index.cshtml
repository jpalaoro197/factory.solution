@{
  Layout = "_Layout";
}

@using UniversityRoster.Models;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

<ul>
  @foreach(Machine course in Model)
  {
    <li>@Html.ActionLink($"{course.Class}", "Details", new { id = course.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new course", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>